<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arms_workout">


    <ImageView
        android:id="@+id/arms_logo"
        android:layout_width="117dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:clickable="true"
        android:contentDescription="@string/life_skills_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/life_skills_logo_1"
        android:focusable="true" />

    <TextView
        android:id="@+id/ArmsText1"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Arms Workouts"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/arms_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toEndOf="@+id/arms_logo"
        app:layout_constraintTop_toTopOf="@+id/arms_logo" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.850"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arms_logo"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/Arm_raises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCards"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/Armsimage2"
                        android:layout_width="100sp"
                        android:layout_height="80sp"
                        app:srcCompat="@drawable/armraise" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/armstext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="25dp"
                            android:text="Arm Raises"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Triceps_dips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCards"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/Armsimage3"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        app:srcCompat="@drawable/triceps" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/armstext3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="25dp"
                            android:textStyle="bold"
                            android:text="Triceps Dips"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp" />



                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Diamond_pushups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCards"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:id="@+id/Armsimage4"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        app:srcCompat="@drawable/diamond" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/armstext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginLeft="25sp"
                            android:layout_marginTop="25dp"
                            android:textStyle="bold"
                            android:text="Diamond Push Up's"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



    <ImageView
        android:id="@+id/arms_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/workouts3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ArmsText1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias=".000"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="134dp" />
    <Button
        android:id="@+id/back_button"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginBottom="25sp"
        android:background="@color/colorCards"
        android:text="Workouts"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/armshomeicon"
        android:layout_width="102dp"
        android:layout_height="71dp"
        android:layout_weight="1"
        android:clickable="true"
        android:contentDescription="@string/life_skills_logo"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"
        app:srcCompat="@drawable/homeicon2" />


</androidx.constraintlayout.widget.ConstraintLayout>