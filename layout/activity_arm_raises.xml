<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arm_raises">


    <ImageView
        android:id="@+id/armraiselogo"
        android:layout_width="112dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:clickable="true"
        android:contentDescription="@string/life_skills_logo"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/life_skills_logo_1" />

    <TextView
        android:id="@+id/armraise"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Arm Raise"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/armraiselogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toEndOf="@+id/armraiselogo"
        app:layout_constraintTop_toTopOf="@+id/armraiselogo" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226"
        app:srcCompat="@drawable/armraise" />



    <TextView
        android:id="@+id/armraise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <ScrollView
        android:id="@+id/scrollarmraise"
        android:layout_width="409dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699">

        <TextView
            android:layout_width="401dp"
            android:layout_height="235dp"
            android:text="1.Stand tall with knees slightly bent. Holding a dumbbell in each hand, let your arms hang by your sides, palms facing in.

                                                             2. Keep a slight bend in your elbows as you raise your arms out to the sides until the dumbbells are level with shoulders (make sure your palms are facing the floor)..
                          3.Lower your arms; complete 8 to 12 reps."
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.706" />
    </ScrollView>

    <TextView
        android:id="@+id/armraise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More about this: "
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848" />

    <TextView
        android:id="@+id/linkarmraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkarmraise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />
    <Button
        android:id="@+id/armraisebackbutton"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginBottom="25sp"
        android:background="@color/colorCards"
        android:text="Workouts"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/armraisehomeicon"
        android:layout_width="102dp"
        android:layout_height="71dp"
        android:layout_weight="1"
        android:clickable="true"
        android:contentDescription="@string/life_skills_logo"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"
        app:srcCompat="@drawable/homeicon2" />

</androidx.constraintlayout.widget.ConstraintLayout>